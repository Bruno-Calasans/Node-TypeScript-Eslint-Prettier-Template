{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "files": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
